<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/gambar_satu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"

        android:src="@drawable/buku"
        android:transitionName="buku"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/gambar_dua"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"

        android:src="@drawable/save"
        android:transitionName="save"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gambar_satu"
        />

    <ImageView
        android:id="@+id/gambar_tiga"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="5dp"

        android:src="@drawable/delete"
        android:transitionName="delete"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gambar_dua"
        />

</androidx.constraintlayout.widget.ConstraintLayout>